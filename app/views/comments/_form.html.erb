<%= form_for([@post, @comment]) do |f| %>
  
  <%= f.label :title %>
  <%= f.text_field :title %><br>
  
  <%= f.label :content %>
  <%= f.text_area :content %><br>

  <%= f.label :image %>
  <%= f.text_field :image%><br>

  <%= f.hidden_field :user_id, :value => current_user.id %><br>

  <%= f.submit %>

<% end %>